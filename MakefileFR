.PHONY: cv-fr

CC = xelatex
EXAMPLES_DIR = cv-fr
RESUME_DIR = cv/resume-fr
CV_DIR = cv/cv-fr
RESUME_SRCS = $(shell find $(RESUME_DIR) -name '*.tex')
CV_SRCS = $(shell find $(CV_DIR) -name '*.tex')

examples: $(foreach x, coverletter cv resume, $x.pdf)

resume.pdf: $(EXAMPLES_DIR)/resume-fr.tex $(RESUME_SRCS) dependencies
	$(CC) -output-directory=$(EXAMPLES_DIR) $<

cv.pdf: $(EXAMPLES_DIR)/cv-fr.tex $(CV_SRCS) dependencies
	$(CC) -output-directory=$(EXAMPLES_DIR) $<

coverletter.pdf: $(EXAMPLES_DIR)/coverletter-fr.tex dependencies
	$(CC) -output-directory=$(EXAMPLES_DIR) $<

dependencies:
    # Commands to handle dependencies go here
    echo "Handling dependencies..."

clean:
	rm -rf $(EXAMPLES_DIR)/*.pdf
